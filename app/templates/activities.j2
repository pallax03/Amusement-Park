{% extends 'layout.html' %}

{% block title %} Attività {% endblock title %}

{% block links %}
    <link rel="stylesheet" href="css/content.css">
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.14/index.global.min.js"></script>
{% endblock links %}

{% block content %}
    <script>
        const url_for_get_events = "{{ url_for_get_events }}";
        const url_for_get_schedules = "{{ url_for_get_schedules }}";
        const url_for_get_rides = "{{ url_for_get_rides }}";
        const url_for_get_categories = "{{ url_for_get_categories }}";
        const url_for_get_tariffs = "{{ url_for_get_tariffs }}";
        const url_for_get_limits = "{{ url_for_get_limits }}";
    </script>
    <div id="content" class="container">
        <!-- MODAL EVENT -->
        <div class="modal" id="modal_event" style="display: none;">
            <div class="modal-container">
                <span class="close">&times;</span>
                <div id="calendar">

                </div>
            </div>
        </div>
        
        <!-- MODAL RIDE -->
        <div class="modal" id="modal_ride" style="display: none;">
            <div class="modal-container">
                <span class="close">&times;</span>
                <form>
                    <label for="name">
                        <h3>Attrazione:</h3>
                        <input type="text" id="modal_ride-name" placeholder="nome" name="name" required>
                    </label>
                    <label for="description">Descrizione:</label>
                    <textarea id="modal_ride-description" name="description" required></textarea>
                    <label for="total_seats">Posti totali:
                        <input type="number" oninput="acceptInteger(this)" id="modal_ride-total_seats" name="total_seats" required>
                    </label>
                    <label for="category">Categoria:
                        <input list="modal_ride-datalist_category" id="modal_ride-category" name="category" placeholder="nome categoria" title="category" required>
                        <datalist id="modal_ride-datalist_category">
                        </datalist>
                    </label>
                    <label for="limit">
                        <h3>Limiti:</h3>
                        <ul id="modal_ride-constraint_limits">   
                        </ul>
                    </label>
                    <input type="button" onclick="addRide()" value="Aggiungi Attrazione">
                </form>
            </div>
        </div>


        <div class="center">
            <h1>Attività</h1>
            <div class="choices">
                <div class="container">
                    <div class="options">
                        <input type="radio" name="activity" id="chosen_events">
                        <label for="chosen_events">Eventi</label>
                        <input type="radio" name="activity" id="chosen_rides">
                        <label for="chosen_rides">Attrazioni</label>
                    </div>
                </div>
            </div>
            <div class="container" style="display: none;">
                <table id="table_events">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Nome</th>
                            <th>Descrizione</th>
                            <th>Posti totali</th>
                            <th>Programmazione</th>
                        </tr>
                    </thead>
                    <tbody id="table-body_events">
                    </tbody>
                </table>
            </div>

            <div class="container" style="display: none;">
                <div id="filter_menu">
                    <h3>Filtra:</h3>
                    <label for="filter_categorie">categoria:</label>
                    <select id="filter_categorie">

                    </select>
                    <label for="filter_limiti">limite:</label>
                    <select id="filter_limiti">
 
                    </select>
                    <label for="filter_tariffe">tariffa richiesta:</label>
                    <select id="filter_tariffe">

                    </select>
                </div>
                <table id="table_rides">    
                    <thead>
                        <tr>
                            <th></th>
                            <th>Nome</th>
                            <th>Descrizione</th>
                            <th>Posti totali</th>
                            <th>Categoria</th>
                            <th>Limiti</th>
                        </tr>
                    </thead>
                    <tbody id="table-body_rides">

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="/js/activities.js"></script>
{% endblock content %}